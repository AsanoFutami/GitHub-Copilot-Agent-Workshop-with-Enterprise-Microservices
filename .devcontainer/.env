# Dev Container Environment Variables
# Configuration for Ski Shop Microservices Development Environment

# Azure OpenAI Configuration (for AI Support Service)
# Please update these values with your actual Azure OpenAI credentials
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_CHAT_DEPLOYMENT_NAME=gpt-4
AZURE_OPENAI_EMBEDDING_DEPLOYMENT_NAME=text-embedding-3-small

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=skishop
POSTGRES_USER=skishop_user
POSTGRES_PASSWORD=skishop_password

# Database connection strings for each service
DB_USERNAME=skishop_user
DB_PASSWORD=skishop_password
DATABASE_USERNAME=skishop_user
DATABASE_PASSWORD=skishop_password

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:9092

# Elasticsearch Configuration
ELASTICSEARCH_HOST=elasticsearch
ELASTICSEARCH_PORT=9200

# Application Configuration
SPRING_PROFILES_ACTIVE=dev
JWT_SECRET=ski-shop-microservices-jwt-secret-key-for-development-environment-only-256-bits-minimum-required
JWT_EXPIRATION=86400

# Mail Configuration (MailHog for testing)
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=
MAIL_PASSWORD=

# Monitoring Configuration
PROMETHEUS_ENABLED=true
GRAFANA_ADMIN_PASSWORD=admin

# Development Settings
DEBUG_MODE=true
LOG_LEVEL=DEBUG
