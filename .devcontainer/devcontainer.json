{
  "name": "Ski Shop Microservices DevContainer",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "."
  },
  "workspaceFolder": "/workspaces/java-skishop-microservices",

  "customizations": {
    "vscode": {
      "settings": {
  "java.jdt.ls.java.home": "/usr/lib/jvm/msopenjdk-current",
        "java.configuration.runtimes": [
          {
            "name": "JavaSE-21",
            "path": "/usr/lib/jvm/msopenjdk-current"
          }
        ],
        "maven.executable.path": "/usr/bin/mvn",
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "/bin/bash"
          }
        },
        "files.exclude": {
          "**/target": true,
          "**/.classpath": true,
          "**/.project": true,
          "**/.settings": true,
          "**/.factorypath": true
        },
        "java.compile.nullAnalysis.mode": "automatic",
        "java.import.generatesMetadataFilesAtProjectRoot": true,
        "spring-boot.ls.problem.application-properties.enabled": true
      },
      "extensions": [
        "vscjava.vscode-java-pack",
        "vscjava.vscode-spring-initializr",
        "vscjava.vscode-spring-boot-dashboard",
        "pivotal.vscode-spring-boot",
        "vmware.vscode-spring-boot",
        "vscjava.vscode-maven",
        "vscjava.vscode-java-test",
        "formulahendry.code-runner",
        "ms-azuretools.vscode-docker",
        "ms-vscode-remote.remote-containers",
        "cweijan.vscode-postgresql-client2",
        "humao.rest-client",
        "42crunch.vscode-openapi",
        "ms-vscode.vscode-json",
        "github.vscode-pull-request-github",
        "github.copilot",
        "github.copilot-chat",
        "eamodio.gitlens",
        "ms-vscode.vscode-yaml",
        "redhat.vscode-xml",
        "esbenp.prettier-vscode"
      ]
    }
  },

  "forwardPorts": [
    3000,
    8080,
    8090,
    8081,
    8082,
    8083,
    8084,
    8085,
    8086,
    8087
  ],

  "portsAttributes": {
    "8090": {
      "label": "API Gateway",
      "onAutoForward": "ignore"
    },
    "8080": {
      "label": "Authentication Service / Frontend",
      "onAutoForward": "ignore"
    },
    "8081": {
      "label": "User Management Service",
      "onAutoForward": "ignore"
    },
    "8082": {
      "label": "Inventory Management Service",
      "onAutoForward": "ignore"
    },
    "8083": {
      "label": "Sales Management Service",
      "onAutoForward": "ignore"
    },
    "8084": {
      "label": "Payment & Cart Service",
      "onAutoForward": "ignore"
    },
    "8085": {
      "label": "Point Service",
      "onAutoForward": "ignore"
    },
    "8086": {
      "label": "Coupon Service",
      "onAutoForward": "ignore"
    },
    "8087": {
      "label": "AI Support Service",
      "onAutoForward": "ignore"
    }
  },

  "postCreateCommand": "bash -lc '.devcontainer/post-create.sh'",
  "postStartCommand": "echo 'üöÄ Ski Shop Development Environment Ready!'",

  "containerEnv": {
    "SPRING_PROFILES_ACTIVE": "dev",
    "JAVA_TOOL_OPTIONS": "-Dspring.jpa.show-sql=true -Dlogging.level.org.springframework.web=DEBUG",
    "MAVEN_OPTS": "-Xmx1024m",
  "JAVA_HOME": "/usr/lib/jvm/msopenjdk-current",
    // Êñ∞„Éï„É©„Ç∞: „Ç§„É≥„Éï„É©„Éò„É´„Çπ„ÉÅ„Çß„ÉÉ„ÇØÂÆüË°å (true/false)
    "CHECK_INFRA_SERVICES": "true",
    // Êñ∞„Éï„É©„Ç∞: mvn dependency:go-offline ÂÆüË°å (always/false/once)
    "MAVEN_GO_OFFLINE": "once"
  },

  "mounts": [
     "source=ski-shop-maven-cache,target=/root/.m2,type=volume",
     "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],

  "remoteUser": "root"
}
