# User Management Service - Local Development Environment Settings

# =================================
# Authentication Feature Flag
# =================================
# true: Authentication enabled (production equivalent)
# false: Authentication disabled (for development)
SKISHOP_AUTH_ENABLE=false

# =================================
# Spring Profile
# =================================
SPRING_PROFILES_ACTIVE=local

# =================================
# Database Settings
# =================================
POSTGRES_DB=skishop_user
POSTGRES_USER=skishop_user
POSTGRES_PASSWORD=password
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/skishop_user
SPRING_DATASOURCE_USERNAME=skishop_user
SPRING_DATASOURCE_PASSWORD=password

# =================================
# Redis Settings
# =================================
SPRING_DATA_REDIS_HOST=redis
SPRING_DATA_REDIS_PORT=6379
SPRING_DATA_REDIS_PASSWORD=

# =================================
# JVM Settings
# =================================
JAVA_OPTS=-Xmx512m -Xms256m -Djava.security.egd=file:/dev/./urandom

# =================================
# pgAdmin Settings (Optional)
# =================================
PGADMIN_DEFAULT_EMAIL=admin@skishop.com
PGADMIN_DEFAULT_PASSWORD=admin

# =================================
# Application Settings
# =================================
# Frontend Base URL
FRONTEND_BASE_URL=http://localhost:3000

# Mail Settings (disabled in local)
EMAIL_FROM=noreply@skishop.com
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=

# =================================
# Development Settings
# =================================
# Log Level
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_SKISHOP_USER=DEBUG

# JPA Settings
SPRING_JPA_SHOW_SQL=true
SPRING_JPA_HIBERNATE_DDL_AUTO=create-drop
